{
    "name": "neo-visual-devtracker",
    "publisher": "ngd-seattle",
    "displayName": "Neo Visual DevTracker",
    "description": "A Neo Express blockchain explorer that is directly available within Visual Studio Code",
    "version": "0.9.81-preview",
    "icon": "neo-logo-256.png",
    "galleryBanner": {
        "color": "#242424",
        "theme": "dark"
    },
    "author": "Neo Global Development Seattle",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "bugs": {
        "url": "https://github.com/neo-project/neo-visual-tracker/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/neo-project/neo-visual-tracker.git"
    },
    "keywords": [
        "Neo",
        "Blockchain",
        "Tracker"
    ],
    "activationEvents": [
        "onCommand:neo-visual-devtracker.openTracker",
        "onView:neo-visual-devtracker.rpcServerExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "neo-visual-devtracker.rpcServerExplorer",
                    "name": "Neo RPC Servers"
                }
            ]
        },
        "commands": [
            {
                "command": "neo-visual-devtracker.openTracker",
                "title": "Open Neo Visual DevTracker",
                "category": "Neo Express",
                "when": "false"
            },
            {
                "command": "neo-visual-devtracker.refreshObjectExplorerNode",
                "title": "Refresh Neo RPC Server list",
                "category": "Neo Express",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "neo-visual-devtracker.startServer",
                "title": "Start Neo Express",
                "category": "Neo Express",
                "icon": {
                    "light": "resources/light/play.svg",
                    "dark": "resources/dark/play.svg"
                },
                "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
            },
            {
                "command": "neo-visual-devtracker.stopServer",
                "title": "Stop Neo Express",
                "category": "Neo Express",
                "icon": {
                    "light": "resources/light/stop.svg",
                    "dark": "resources/dark/stop.svg"
                },
                "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
            },
            {
                "command": "neo-visual-devtracker.invokeContract",
                "title": "Invoke contract",
                "category": "NEO Express",
                "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
            },
            {
                "command": "neo-visual-devtracker.createInstance",
                "title": "Create instance",
                "category": "NEO Express",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "neo-visual-devtracker.refreshObjectExplorerNode",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer",
                    "group": "navigation"
                },
                {
                    "command": "neo-visual-devtracker.createInstance",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "neo-visual-devtracker.startServer",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable",
                    "group": "inline"
                },
                {
                    "command": "neo-visual-devtracker.stopServer",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable",
                    "group": "inline"
                },
                {
                    "command": "neo-visual-devtracker.startServer",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
                },
                {
                    "command": "neo-visual-devtracker.stopServer",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
                },
                {
                    "command": "neo-visual-devtracker.invokeContract",
                    "when": "view == neo-visual-devtracker.rpcServerExplorer && viewItem == startable"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm install && tsc -p ./ && node-sass src/panels/tracker.scss -o out/panels && node-sass src/panels/invoke.scss -o out/panels && node-sass src/panels/create.scss -o out/panels && browserify out/panels/tracker.js -o out/panels/trackerBundle.js && browserify out/panels/invoke.js -o out/panels/invokeBundle.js && browserify out/panels/create.js -o out/panels/createBundle.js",
        "watch": "npm run compile && concurrently -r npm:watch-*",
        "watch-ts": "tsc -watch -p ./",
        "watch-css-1": "node-sass src/panels/tracker.scss -wo out/panels",
        "watch-css-2": "node-sass src/panels/invoke.scss -wo out/panels",
        "watch-css-3": "node-sass src/panels/create.scss -wo out/panels",
        "watch-browserify-1": "watchify out/panels/tracker.js -o out/panels/trackerBundle.js",
        "watch-browserify-2": "watchify out/panels/invoke.js -o out/panels/invokeBundle.js",
        "watch-browserify-3": "watchify out/panels/create.js -o out/panels/createBundle.js",
        "package": "npm run setversion && vsce package",
        "pretest": "npm run compile",
        "setversion": "gulp setversion",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/gulp": "^4.0.6",
        "@types/memoizee": "^0.4.3",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.17.5",
        "@types/pouchdb-core": "^7.0.4",
        "@types/shell-escape": "^0.2.0",
        "@types/vscode": "^1.40.0",
        "browserify": "^16.5.0",
        "concurrently": "^4.1.2",
        "glob": "^7.1.6",
        "gulp": "4.0.0",
        "mocha": "^6.2.2",
        "nerdbank-gitversioning": "^3.0.26",
        "node-sass": "^4.13.0",
        "ts-node": "^8.5.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2",
        "vsce": "^1.69.0",
        "vscode-test": "^1.2.3",
        "watchify": "^3.11.1"
    },
    "dependencies": {
        "@cityofzion/neon-js": "^4.7.0",
        "@neo-one/node-core": "^1.2.2",
        "bitset": "^5.0.5",
        "bs58": "^4.0.1",
        "bs58check": "^2.1.2",
        "find-process": "^1.4.2",
        "memoizee": "^0.4.14",
        "request": "^2.88.0",
        "shell-escape": "^0.2.0"
    }
}
