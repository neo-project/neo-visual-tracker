{
    "name": "neo-visual-devtracker",
    "publisher": "ngd-seattle",
    "displayName": "NEO Visual DevTracker",
    "description": "A NEO Express blockchain explorer that is directly available within Visual Studio Code",
    "version": "0.0.0",
    "icon": "neo-logo-256.png",
    "galleryBanner": {
        "color": "#242424",
        "theme": "dark"
    },
    "author": "NEO Global Development Seattle",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Other"
    ],
    "bugs": {
        "url": "https://github.com/ngdseattle/visual-devtracker/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ngdseattle/visual-devtracker.git"
    },
    "keywords": [
        "NEO",
        "Blockchain",
        "Tracker"
    ],
    "activationEvents": [
        "onCommand:extension.openTracker",
        "onView:extension.rpcServerExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "extension.rpcServerExplorer",
                    "name": "NEO RPC Servers"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.openTracker",
                "title": "Open NEO Visual DevTracker",
                "category": "NEO Express",
                "when": "false"
            },
            {
                "command": "extension.refreshServers",
                "title": "Refresh NEO RPC Server list",
                "category": "NEO Express",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "extension.startServer",
                "title": "Start NEO Express",
                "category": "NEO Express",
                "icon": {
                    "light": "resources/light/play.svg",
                    "dark": "resources/dark/play.svg"
                },
                "when": "view == extension.rpcServerExplorer && viewItem == startable"
            },
            {
                "command": "extension.stopServer",
                "title": "Stop NEO Express",
                "category": "NEO Express",
                "icon": {
                    "light": "resources/light/stop.svg",
                    "dark": "resources/dark/stop.svg"
                },
                "when": "view == extension.rpcServerExplorer && viewItem == startable"
            },
            {
                "command": "extension.invokeContract",
                "title": "EXPERIMENTAL -- Invoke contract",
                "category": "NEO Express",
                "when": "view == extension.rpcServerExplorer && viewItem == startable"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "extension.refreshServers",
                    "when": "view == extension.rpcServerExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.startServer",
                    "when": "view == extension.rpcServerExplorer && viewItem == startable",
                    "group": "inline"
                },
                {
                    "command": "extension.stopServer",
                    "when": "view == extension.rpcServerExplorer && viewItem == startable",
                    "group": "inline"
                },
                {
                    "command": "extension.startServer",
                    "when": "view == extension.rpcServerExplorer && viewItem == startable"
                },
                {
                    "command": "extension.stopServer",
                    "when": "view == extension.rpcServerExplorer && viewItem == startable"
                },
                {
                    "command": "extension.invokeContract",
                    "when": "view == extension.rpcServerExplorer && viewItem == startable"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm install && tsc -p ./ && node-sass src/panel/panel.scss -o out/panel && browserify out/panel/panel.js -o out/panel/bundle.js",
        "watch": "npm run compile && concurrently -r npm:watch-*",
        "watch-ts": "tsc -watch -p ./",
        "watch-css": "node-sass src/panel/panel.scss -wo out/panel",
        "watch-browserify": "watchify out/panel/panel.js -o out/panel/bundle.js",
        "package": "npm run setversion && vsce package",
        "pretest": "npm run compile",
        "setversion": "gulp setversion",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/gulp": "^4.0.6",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.37.0",
        "browserify": "^16.5.0",
        "concurrently": "^4.1.2",
        "glob": "^7.1.4",
        "gulp": "4.0.0",
        "mocha": "^6.1.4",
        "nerdbank-gitversioning": "^3.0.26",
        "node-sass": "^4.12.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vsce": "^1.68.0",
        "vscode-test": "^1.2.0",
        "watchify": "^3.11.1"
    },
    "dependencies": {
        "@cityofzion/neon-js": "^4.7.0",
        "@neo-one/node-core": "^1.2.2",
        "@types/memoizee": "^0.4.3",
        "@types/pouchdb-core": "^7.0.4",
        "bitset": "^5.0.5",
        "find-process": "^1.4.2",
        "memoizee": "^0.4.14",
        "request": "^2.88.0"
    }
}
